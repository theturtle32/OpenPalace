<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/halo"
			   creationComplete="resetEngine()">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

	<fx:Script>
		<![CDATA[
			import net.codecomposer.palace.script.IptscraeMgr;
			import net.codecomposer.palace.script.TestPalaceController;
			private var palaceController:TestPalaceController;
			
			private function doScript():void {
				palaceController.executeScript(scriptInput.text);
				scriptOutput.text = palaceController.output;
			}
			
			private function resetEngine():void {
				palaceController = new TestPalaceController();
				new IptscraeMgr(palaceController);
				scriptOutput.text = palaceController.output;
			}
		]]>
	</fx:Script>
	
	<s:layout>
		<s:VerticalLayout
			gap="5"
			paddingBottom="10"
			paddingRight="10"
			paddingLeft="10"
			paddingTop="10"
			horizontalAlign="left" />
	</s:layout>
	
	<s:Label text="Script:" />
	<s:TextArea id="scriptInput" width="100%" height="100%" />
	
	<s:HGroup gap="10">
		<s:Button label="Execute!" click="doScript()" />
		<s:Button label="Reset Engine" click="resetEngine()" />
	</s:HGroup>
	
	<s:Label text="Output:" />
	<s:TextArea id="scriptOutput" width="100%" height="100%" />
	
</s:Application>
