<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml"
	title="{palace.serverName} - {palace.currentRoom.name}"
	layout="absolute"
	verticalGap="0"
	verticalScrollPolicy="off" horizontalScrollPolicy="off"
	left="10" top="10"
	enabled="{palace.connected}"
	xmlns:view="net.codecomposer.palace.view.*" xmlns:code="http://code.google.com/p/flexlib/">
	
	<mx:Script>
		<![CDATA[
			import net.codecomposer.palace.rpc.PalaceClient;
			[Bindable]
			private var palace:PalaceClient = PalaceClient.getInstance();
						
			private function handleChatKeyDown(event:KeyboardEvent):void {
				if (event.keyCode == Keyboard.ENTER) {
					palace.say(chatBox.text);
					chatBox.text = "";
				}
			}
		]]>
	</mx:Script>
	
	<mx:VBox verticalGap="0">
		<mx:Canvas borderColor="#111111" borderStyle="solid"
			width="{roomView.width+2}" height="{roomView.height+2}">
			<view:PalaceRoomView id="roomView"
				horizontalCenter="0" verticalCenter="0"
				room="{palace.currentRoom}" mediaServer="{palace.mediaServer}"/>
		</mx:Canvas>
		<code:PromptingTextInput prompt="Type here to chat..."
			width="{roomView.width+2}"
			id="chatBox" keyDown="handleChatKeyDown(event);" maxChars="254"/>
	</mx:VBox>
	
	
</mx:Panel>
